// tsconfig.json  (plugin root)
{
  "extends": "@docusaurus/tsconfig",
  "compilerOptions": {
    /* Emit settings */
    "baseUrl": "src",
    "rootDir": "src",
    "outDir": "dist",
    "declaration": true,
    "declarationMap": true,
    "noEmit": false,            // override the base

    /* Enhanced strictness settings */
    "strict": true,
    "strictNullChecks": true,
    "exactOptionalPropertyTypes": true,
    "noImplicitOverride": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedIndexedAccess": true,
    "noImplicitReturns": true,

    "lib": ["ES2022"],

    /* Type roots */
    "types": ["node"],

    /* No path mapping - using relative imports */
    
  },
  "include": ["src/**/*"],
  "exclude": ["dist", "node_modules"]
}