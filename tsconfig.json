{
  "compilerOptions": {
    "target": "es2016",
    "lib": ["ES2016"],
    "module": "Node16",
    "moduleResolution": "Node16",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true
  },
  "exclude": [
    "node_modules",
    "**/node_modules/*",
    "build",
    "**/build/*",
    ".docusaurus",
    "**/.docusaurus/*"
  ]
}
